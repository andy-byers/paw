//print(argv[0])
//let argv = map(float, argv[1].split(',')) 

let x0 = -1.8//argv[0] as float 
let x1 = 1.2//argv[1] as float 
let nx = 100//int(argv[2]) 
let y0 = -1.3//argv[3] as float 
let y1 = 1.3//argv[4] as float 
let ny = 32//int(argv[5]) 

assert(nx > 0 && ny > 0)
let dy = (y1 - y0) / (ny - 1) as float
let dx = (x1 - x0) / (nx - 1) as float

for i = 0, ny {
    let y = y0 + i as float * dy
    for j = 0, nx {
        let x = x0 + j as float * dx
        let zi = 0.0
        let zr = 0.0
        let i = 0
        while i < 100 {
            if zi*zi+zr*zr >= 4.0 {
                break
            }
            let zz = zr*zr - zi*zi + x
            zi = 2.0*zr*zi + y
            zr = zz
            i = i + 1
        }
        print(charmap[i % 10])
    }
    print('\n')
}
