fn special_case(key: str, callback: fn(str)) {
    callback(key);
}

fn check_special_case(key: str) {
    let map = [:];
    special_case(key, |k: str| map[k] = "value");
    assert(map["key"] == "value");
}

pub fn test_special_case() {
    check_special_case("key");
}

