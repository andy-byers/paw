// struct.paw

struct Empty;

struct Integer {
    pub value: int,
}

pub fn test_struct_initializer() {
    let i = Integer{value: 123};
    let i: Integer = i;
}

pub fn test_struct_fields() {
    let i = Integer{value: 123};
    assert(i.value == 123);
    i.value = 42;
    assert(i.value == 42);
}

pub fn test_struct_syntax() {
    let i = Integer{value: 123}; {}
    {} {}{}
    let i = i;
    {}
    let i = i.value;
    assert(i == 123);
}

struct Inner {
    pub a: int,
    pub b: str,
    pub c: Empty,
}

struct Outer {
    pub a: bool,
    pub b: Inner,
}

pub fn test_nested_struct() {
    let o = Outer{
        a: false,
        b: Inner{
            a: 1,
            b: "two",
            c: Empty,
        },
    };
    assert(o.b.a == 1);
    assert(o.b.b == "two");
}

struct NoComma {
    // comma only needed to separate fields
    pub value: int 
}

struct TestSelf {
    pub fn assoc_fn(s: TestSelf) {}
    pub fn assoc_fn2(s: Self) {}
    pub fn method(self) {}
    pub fn method2(self: Self) {}
}

pub fn test_self() {
    let ts = TestSelf;
    ts.method();

    TestSelf::assoc_fn(ts);
    TestSelf::assoc_fn2(ts);

    // call method like an associated function
    TestSelf::method(ts);
}

struct FnField<T> {
    pub f: fn(T) -> T,
}

pub fn test_fn_in_field() {
    let f = FnField{f: |x| x};
    assert(f.f(42) == 42);
}

