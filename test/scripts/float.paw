// float.paw

pub fn test_zeros() {
    assert(0.0 == 0.0);
    assert(0.00 == 0.0);
    assert(0. == 0.0);
    assert(0.0e0 == 0.0);
    assert(0.0e1 == 0.0);
}

pub fn test_exponents() {
    assert(1e1 == 10.0);
    assert(10e-1 == 1.0);
    assert(10e+1 == 100.0);
    assert(10e-001 == 1.0);
    assert(10e+001 == 100.0);
}

pub fn test_parse() {
    let check = |s, f| {
        assert(_string_parse_float(s) == f);
    };

    check('0.0', 0.0);
    check('1.0', 1.0);
    check('10.0', 10.0);
    check('1e10', 1e10);
    check('1E10', 1e10);
    check('1e+10', 1e+10);
    check('  1.0', 1.0);
    check('1.0  ', 1.0);
    check(' 1.0 ', 1.0);
    check('  -1.0', -1.0);
    check('-1.0  ', -1.0);
    check(' -1.0 ', -1.0);
    check('.0', 0.0);
    check('0.', 0.0);
    check('0', 0.0);
    check('1', 1.0);
    check('100', 100.0);
}
