-- bubble.paw

fn random(n): [int] {
    let a: [int] = []
    let x = n
    for _ = 0, n {
        x = (140671485 * x + 12820163) % 16777216
        a.push(x)
    }
    return a
}

fn bubble(n: int): [int] {
    let a = random(n)
    while true {
        let swapped = false
        for i = 1, n {
            if a[i] < a[i - 1] {
                let t = a[i]
                a[i] = a[i - 1]
                a[i - 1] = t
                swapped = true
            }
        }
        if !swapped {
            break
        }
    }
    return a
}

bubble(#argv > 1 ?? int(argv[1]) :: 500)
